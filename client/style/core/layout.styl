body
    background color-bg
    color color-black
    text-align center
    padding 0
    margin 0

.row
    grid-system()

header
    clearfix()
    padding 20px
    background header-color
    margin-bottom 20px

    .logo
        bg-image('logo/header', contain, center center, no-repeat, 'svg')
        float left
        display block
        width 150px
        height 30px

    .inner
        page-width()

    ul.nav
        debullet()
        float right

        a
            display inline-block
            color color-white
            font-weight 100
            padding 5px